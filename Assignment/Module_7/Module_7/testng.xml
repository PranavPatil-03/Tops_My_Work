<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="All TestNG Groups Suite">

    <!-- Smoke Tests -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.websriver_Module_7_testng.create_group"/>
        </classes>
    </test>

    <!-- Regression Tests -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.websriver_Module_7_testng.create_group"/>
        </classes>
    </test>

    <!-- Smoke + Regression -->
    <test name="All Group Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.websriver_Module_7_testng.create_group"/>
        </classes>
    </test>

</suite>

